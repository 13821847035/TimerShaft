<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="vertical">


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_all_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ruadio2"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/text_size_title"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/son"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_row"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/colorTextChecked"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/left_across"
                android:layout_width="0px"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@color/colorTextChecked"/>


            <TextView
                android:id="@+id/right_across"
                android:layout_width="0px"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_weight="1"
                android:background="@color/colorTextChecked"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_center_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/center_blue"/>

        <LinearLayout
            android:id="@+id/ll_right_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@drawable/ruadio1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_right_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程"
                android:textColor="@color/colorTextChecked"
                android:textSize="@dimen/text_size_usually"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_left_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ruadio1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_left_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程"
                android:textColor="@color/colorTextChecked"
                android:textSize="@dimen/text_size_usually"/>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>